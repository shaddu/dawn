{% doc %}
  @prompt
    Create a two-column section where the first column displays a slideshow of collection images and the second column shows an accordion with collection details

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .collection-showcase-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.gap }}px;
  }

  .collection-showcase__column-{{ ai_gen_id }} {
    flex: 1;
    min-width: 300px;
  }

  .collection-slideshow-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    height: {{ block.settings.slideshow_height }}px;
  }

  .collection-slideshow__slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .collection-slideshow__slide-{{ ai_gen_id }}.active {
    opacity: 1;
    z-index: 1;
  }

  .collection-slideshow__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-slideshow__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .collection-slideshow__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .collection-slideshow__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    gap: 10px;
    z-index: 2;
  }

  .collection-slideshow__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    border: none;
    padding: 0;
  }

  .collection-slideshow__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  .collection-accordion-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.accordion_gap }}px;
  }

  .collection-accordion__item-{{ ai_gen_id }} {
    border: 1px solid {{ block.settings.accordion_border_color }};
    border-radius: {{ block.settings.accordion_border_radius }}px;
    overflow: hidden;
  }

  .collection-accordion__header-{{ ai_gen_id }} {
    padding: 15px 20px;
    background-color: {{ block.settings.accordion_header_bg }};
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    color: {{ block.settings.accordion_text_color }};
  }

  .collection-accordion__icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    position: relative;
    transition: transform 0.3s ease;
  }

  .collection-accordion__icon-{{ ai_gen_id }}::before,
  .collection-accordion__icon-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    background-color: {{ block.settings.accordion_text_color }};
    top: 50%;
    left: 0;
    width: 100%;
    height: 2px;
    margin-top: -1px;
  }

  .collection-accordion__icon-{{ ai_gen_id }}::after {
    transform: rotate(90deg);
    transition: transform 0.3s ease;
  }

  .collection-accordion__item-{{ ai_gen_id }}.active .collection-accordion__icon-{{ ai_gen_id }}::after {
    transform: rotate(0);
  }

  .collection-accordion__content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background-color: {{ block.settings.accordion_content_bg }};
    color: {{ block.settings.accordion_text_color }};
  }

  .collection-accordion__item-{{ ai_gen_id }}.active .collection-accordion__content-{{ ai_gen_id }} {
    max-height: 500px;
  }

  .collection-accordion__inner-{{ ai_gen_id }} {
    padding: 20px;
  }

  .collection-accordion__description-{{ ai_gen_id }} {
    margin-bottom: 15px;
  }

  .collection-accordion__products-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .collection-accordion__product-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    border-radius: 4px;
    background-color: rgba(0, 0, 0, 0.05);
    width: 100%;
  }

  .collection-accordion__product-image-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 4px;
    overflow: hidden;
  }

  .collection-accordion__product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-accordion__product-info-{{ ai_gen_id }} {
    flex: 1;
  }

  .collection-accordion__product-title-{{ ai_gen_id }} {
    font-weight: 600;
    margin: 0 0 5px;
    font-size: 14px;
  }

  .collection-accordion__product-price-{{ ai_gen_id }} {
    font-size: 14px;
  }

  .collection-accordion__view-all-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: 15px;
    padding: 8px 16px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 600;
  }

  @media screen and (max-width: 768px) {
    .collection-showcase-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .collection-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.slideshow_height_mobile }}px;
    }
  }
{% endstyle %}

<div class="collection-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="collection-showcase__column-{{ ai_gen_id }}">
    <collection-slideshow-{{ ai_gen_id }} class="collection-slideshow-{{ ai_gen_id }}">
      {% if block.settings.collections != blank %}
        {% for collection in block.settings.collections %}
          <div class="collection-slideshow__slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}">
            {% if collection.image %}
              <img 
                src="{{ collection.image | image_url: width: 1000 }}" 
                alt="{{ collection.title | escape }}" 
                class="collection-slideshow__image-{{ ai_gen_id }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              >
            {% else %}
              <div class="collection-slideshow__placeholder-{{ ai_gen_id }}">
                {{ 'collection-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endfor %}

        <div class="collection-slideshow__controls-{{ ai_gen_id }}">
          {% for collection in block.settings.collections %}
            <button 
              class="collection-slideshow__dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" 
              data-slide-index="{{ forloop.index0 }}" 
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {% endfor %}
        </div>
      {% else %}
        <div class="collection-slideshow__slide-{{ ai_gen_id }} active">
          <div class="collection-slideshow__placeholder-{{ ai_gen_id }}">
            {{ 'collection-apparel-1' | placeholder_svg_tag }}
          </div>
        </div>
      {% endif %}
    </collection-slideshow-{{ ai_gen_id }}>
  </div>

  <div class="collection-showcase__column-{{ ai_gen_id }}">
    <collection-accordion-{{ ai_gen_id }} class="collection-accordion-{{ ai_gen_id }}">
      {% if block.settings.collections != blank %}
        {% for collection in block.settings.collections %}
          <div class="collection-accordion__item-{{ ai_gen_id }} {% if forloop.first and block.settings.first_expanded %}active{% endif %}" data-accordion-index="{{ forloop.index0 }}">
            <div class="collection-accordion__header-{{ ai_gen_id }}">
              <span>{{ collection.title }}</span>
              <div class="collection-accordion__icon-{{ ai_gen_id }}"></div>
            </div>
            <div class="collection-accordion__content-{{ ai_gen_id }}">
              <div class="collection-accordion__inner-{{ ai_gen_id }}">
                {% if collection.description != blank %}
                  <div class="collection-accordion__description-{{ ai_gen_id }}">
                    {{ collection.description }}
                  </div>
                {% endif %}

                {% if block.settings.show_products %}
                  <div class="collection-accordion__products-{{ ai_gen_id }}">
                    {% for product in collection.products limit: block.settings.products_to_show %}
                      <div class="collection-accordion__product-{{ ai_gen_id }}">
                        <div class="collection-accordion__product-image-{{ ai_gen_id }}">
                          {% if product.featured_image %}
                            <img 
                              src="{{ product.featured_image | image_url: width: 100 }}" 
                              alt="{{ product.title | escape }}"
                              loading="lazy"
                            >
                          {% else %}
                            <div class="collection-slideshow__placeholder-{{ ai_gen_id }}">
                              {{ 'product-apparel-1' | placeholder_svg_tag }}
                            </div>
                          {% endif %}
                        </div>
                        <div class="collection-accordion__product-info-{{ ai_gen_id }}">
                          <h4 class="collection-accordion__product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
                          <div class="collection-accordion__product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                {% endif %}

                {% if block.settings.show_view_all %}
                  <a href="{{ collection.url }}" class="collection-accordion__view-all-{{ ai_gen_id }}">
                    {{ block.settings.view_all_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="collection-accordion__item-{{ ai_gen_id }} active">
          <div class="collection-accordion__header-{{ ai_gen_id }}">
            <span>Sample Collection</span>
            <div class="collection-accordion__icon-{{ ai_gen_id }}"></div>
          </div>
          <div class="collection-accordion__content-{{ ai_gen_id }}">
            <div class="collection-accordion__inner-{{ ai_gen_id }}">
              <div class="collection-accordion__description-{{ ai_gen_id }}">
                <p>This is a sample collection description. Select collections in the block settings to display real content.</p>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </collection-accordion-{{ ai_gen_id }}>
  </div>
</div>

<script>
  (function() {
    class CollectionSlideshow extends HTMLElement {
      constructor() {
        super();
        this.slides = this.querySelectorAll('.collection-slideshow__slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.collection-slideshow__dot-{{ ai_gen_id }}');
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.setupEventListeners();
        this.startAutoplay();
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        this.dots.forEach(dot => {
          dot.addEventListener('click', () => {
            const slideIndex = parseInt(dot.dataset.slideIndex);
            this.goToSlide(slideIndex);
            this.resetAutoplay();
          });
        });
      }

      goToSlide(index) {
        this.slides[this.currentSlide].classList.remove('active');
        this.dots[this.currentSlide].classList.remove('active');
        
        this.currentSlide = index;
        
        this.slides[this.currentSlide].classList.add('active');
        this.dots[this.currentSlide].classList.add('active');
      }

      nextSlide() {
        const nextIndex = (this.currentSlide + 1) % this.slides.length;
        this.goToSlide(nextIndex);
      }

      startAutoplay() {
        if ({{ block.settings.autoplay | json }}) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, {{ block.settings.autoplay_speed }});
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }

      resetAutoplay() {
        this.stopAutoplay();
        this.startAutoplay();
      }
    }

    class CollectionAccordion extends HTMLElement {
      constructor() {
        super();
        this.accordionItems = this.querySelectorAll('.collection-accordion__item-{{ ai_gen_id }}');
        this.accordionHeaders = this.querySelectorAll('.collection-accordion__header-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.accordionHeaders.forEach(header => {
          header.addEventListener('click', () => {
            const item = header.parentElement;
            const isActive = item.classList.contains('active');
            
            if ({{ block.settings.toggle_behavior | json }} === 'single') {
              this.accordionItems.forEach(accordionItem => {
                accordionItem.classList.remove('active');
              });
            }
            
            if (isActive && {{ block.settings.toggle_behavior | json }} === 'multiple') {
              item.classList.remove('active');
            } else {
              item.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('collection-slideshow-{{ ai_gen_id }}', CollectionSlideshow);
    customElements.define('collection-accordion-{{ ai_gen_id }}', CollectionAccordion);
  })();
</script>

